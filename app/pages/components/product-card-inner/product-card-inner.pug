                            img(src="assets/images/main-bg.jpg", alt="").section-product-card__images-big-item-img 
                    .section-product-card__images-small.js-card-small-slider 
                        div(style="background-image: url('../assets/images/card-img.jpg')").section-product-card__images-small-item 
